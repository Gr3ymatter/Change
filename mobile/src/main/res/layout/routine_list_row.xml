<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/routine_name_textView"
              android:text="Upper Body "
              android:textSize="@dimen/abc_text_size_medium_material"
              android:layout_toLeftOf="@+id/start_routine_imageView"
              android:layout_alignParentLeft="true"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/daysCompleted_textView"
              android:textSize="@dimen/abc_text_size_small_material"
              android:text="Days Completed: 2"
              android:layout_below="@id/routine_name_textView"
        />

    <ImageView   android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/start_routine_imageView"
                 android:layout_gravity="right|center_vertical"
                 android:background="@drawable/dumbbell_48_x_48"
                 android:layout_margin="8dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
        />

</RelativeLayout>