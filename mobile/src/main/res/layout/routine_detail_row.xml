<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:background="@drawable/graph_icon_48_x_48"
               android:layout_alignParentRight="true"
               android:layout_margin="8dp"
               android:id="@+id/excercise_stats_imageView"

        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/excercise_title_textView"
              android:textSize="@dimen/abc_text_size_large_material"
              android:text="Excercise #1"
              android:layout_alignParentLeft="true"
              android:layout_margin="8dp"
        />



    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/excercise_stats_imageView"
                  android:orientation="vertical"
                  android:layout_margin="8dp"
                  android:gravity="left"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/linearLayout_exercise_detail"
        >

    </LinearLayout>


</RelativeLayout>